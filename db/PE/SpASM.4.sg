// Detect It Easy: detection rule file

meta("compiler", "SpASM");

includeScript("SpASM");

function detect() {
    if (bSpASM) {
        sVersion = PE.getCompilerVersion();
        sOptions = PE.getGeneralOptionsEx(); // SpASM doesn't have a linker
        bDetected = true;

        // Correct version
        if (PE.getMajorLinkerVersion() > 3) {
            sVersion += "*";
        }
    }

    _sLang = "ASMx" + (PE.is64() ? "64" : "86");

    return result();
}